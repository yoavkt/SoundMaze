<!DOCTYPE LinearLayout PUBLIC "mazeV" "LinearLayout.dtd">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MazeActivity" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_black"
        android:orientation="horizontal" >

        <com.example.soundmaze.MicButton
            android:id="@+id/buttonMicrophone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/button_mic"
            android:contentDescription="@string/buttonMicrophoneContentDescription"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/ic_btn_speak_now" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:padding="20dp"
            android:text="Press The button and tell the ball where to go: up/down/left/right"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/textMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="moveddddd"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            android:text="Back" />
    </LinearLayout>

    <com.example.soundmaze.MazeView
        android:id="@+id/mazeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>