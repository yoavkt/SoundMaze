<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/green"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnMainMaze1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/maze_1_name" />

    <Button
        android:id="@+id/btnMainMaze2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/maze_2_name" />
  <Button
        android:id="@+id/btnMainTopScores"
		android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/top_scores" />
    <Button
        android:id="@+id/btnMainInst"
		android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/inst_dsp" />
      <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Perfect!"
            android:textColor="@color/red"
            android:textSize="@dimen/textSizeMainFeedback" />

        <com.example.soundmaze.MicButton
            android:id="@+id/buttonMicrophone"
            android:layout_width="@dimen/heightMainMic"
            android:layout_height="@dimen/heightMainMic"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_mic"
            android:contentDescription="@string/buttonMicrophoneContentDescription"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/ic_btn_speak_now" />

  



</LinearLayout>